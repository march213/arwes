{
  "scripts": {
    "postinstall": "npm run bootstrap && npm run compile",
    "bootstrap": "lerna bootstrap",
    "lerna": "lerna",
    "playground": "webpack-dev-server --config playground.config.js",
    "lint": "eslint ./packages/*/src",
    "lint-fix": "eslint --fix ./packages/*/src",
    "test": "jest",
    "test-dev": "jest --watch",
    "test-cov": "jest --coverage",
    "test-list": "jest --listTests",
    "test-ci": "npm run bootstrap && npm run compile && npm run lint && npm test",
    "compile": "sh compile.sh",
    "release": "npm run test-ci && lerna publish",
    "changelog": "auto-changelog --output CHANGELOG.md --commit-limit false",
    "contributors-add": "all-contributors add",
    "contributors-generate": "all-contributors generate"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test-ci"
    }
  },
  "dependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-export-default-from": "^7.5.2",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.6.2",
    "@testing-library/react": "^8.0.9",
    "all-contributors-cli": "^6.9.1",
    "animejs": "^3.1.0",
    "auto-changelog": "^1.16.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^8.0.6",
    "documentation": "^9.3.1",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-standard": "^4.0.1",
    "glob": "^7.1.4",
    "howler": "^2.1.2",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lerna": "^3.16.4",
    "navigo": "^7.1.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-jss": "^8.6.1",
    "redux": "^4.0.4",
    "sinon": "^7.5.0",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.1"
  }
}
